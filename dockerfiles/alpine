FROM --platform=i386 i386/alpine:3.20.3
RUN apk update && apk add --upgrade apk-tools && apk upgrade --available
RUN apk add --no-cache doas vim curl
RUN adduser -D satoshi
RUN adduser satoshi wheel
RUN printf "permit nopass keepenv :wheel as root" >> /etc/doas.conf
RUN printf "satoshi:password" | chpasswd
RUN printf "root:password" | chpasswd
# We set WORKDIR, as this gets extracted by Webvm to be used as the cwd. This is optional.
WORKDIR /home/satoshi/
# We set env, as this gets extracted by Webvm. This is optional.
ENV HOME="/home/satoshi" TERM="xterm" USER="satoshi" SHELL="/bin/sh" SU="doas" EDITOR="vim" LANG="en_US.UTF-8" LC_ALL="C"
CMD [ "/sbin/init" ]
